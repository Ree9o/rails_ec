    <body>
        <!-- Navigation-->
          <%= render 'navigation' %>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">商品一覧</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Hapiness chain課題</p>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <% @items.each do | item | %>
                        <div class="col mb-5">
                            <div class="card h-100">
                             <!-- Sale badge-->
                            <% if item.sale_badge%>
                                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <%end%>
                            <!-- Product image-->
                            <% if item.item_image.attached?%>
                                <%= image_tag item.item_image.variant(:thumb),class:"card-img-top"%>
                                <%else%>
                                <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <%end%>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">
                                        <%= item.name%>
                                    </h5>
                                    <!-- Product price-->
                                <%= item.price%>円
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <%= link_to '商品詳細', admin_product_path(item) ,class: "btn btn-outline-dark mt-auto"%>
                                    <%= link_to 'Add to cart', item_path(item) ,class: "btn btn-outline-dark mt-auto"%></div>
                                    <%= link_to '編集', edit_admin_product_path(item),class: "btn btn-outline-dark mt-auto" %>
                                    <%= link_to '削除',"/items/#{item.id}",  data:{turbo_method:"delete",turbo_confirm: "削除してもよろしいですか？"} , class: "btn btn-outline-dark mt-auto"%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%end%>
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
